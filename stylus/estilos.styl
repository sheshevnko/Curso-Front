@import "normalize.styl"
gris_oscuro = #333333
gris_claro = #818181

a 
	text-decoration none
	
body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
header
	height 3.5em
	.tittle
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.author
	color gris_claro
.border-bottom 
	border-bottom 1px solid gris_claro
.button-menu
	margin-top -10px
	position absolute
	top 50%
	
.container
	font-size 0
	padding 1.4rem
	text-align center
.menu	
	display none
.name
	color gris_oscuro
.relative
	position relative
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	width 8rem
	&:nth-child(even)
		margin-right 0
	p 	
		margin .5em 0
